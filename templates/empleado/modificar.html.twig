{% extends 'base.html.twig' %}

{% block body %}

    {% if empleado.id %}
        <h1>Modificar empleado</h1>
    {% else %}
        <h1>Registrar empleado</h1>
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <a href="{{ path('empleado_listar') }}" class="btn btn-info"><i class="bi bi-box-arrow-up-left"></i> Volver al listado</a>
    <button type="submit" class="btn btn-success">Guardar cambios</button>

    {% if empleado.id %}
        <a href="{{ path('empleado_eliminar', {'id': empleado.id}) }}" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar empleado</a>
    {% endif %}

    {{ form_end(form) }}

{% endblock %}
