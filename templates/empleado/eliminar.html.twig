{% extends 'base.html.twig' %}

{% block body %}

    <h1>Eliminar empleado</h1>

    <div class="alert alert-warning">
        ¿Está seguro de que desea eliminar el empleado {{ empleado.usuario }}? La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('empleado_modificar', {'id': empleado.id}) }}" class="btn btn-info"><i class="bi bi-box-arrow-up-left"></i> Volver al empleado</a>
        <button type="submit" name="confirmar" value="ok" class="btn btn-danger"><i class="bi bi-trash"></i> Confirmar eliminación</button>
    </form>

{% endblock %}
