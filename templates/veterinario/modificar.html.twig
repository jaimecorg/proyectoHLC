{% extends 'base.html.twig' %}

{% block body %}

    {% if veterinario.id %}
        <h1>Modificar veterinario</h1>
    {% else %}
        <h1>Registrar veterinario</h1>
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <a href="{{ path('veterinario_listar') }}" class="btn btn-info"><i class="bi bi-box-arrow-up-left"></i> Volver al listado</a>
    <button type="submit" class="btn btn-success">Guardar cambios</button>

    {% if veterinario.id %}
        <a href="{{ path('veterinario_eliminar', {'id': veterinario.id}) }}" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar veterinario</a>
    {% endif %}

    {{ form_end(form) }}

{% endblock %}
