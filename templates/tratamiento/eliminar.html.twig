{% extends 'base.html.twig' %}

{% block body %}

    <h1>Eliminar tratamiento</h1>

    <div class="alert alert-warning">
        ¿Está seguro de que desea eliminar el tratamiento {{ tratamiento.nombre }}? La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('tratamiento_modificar', {'id': tratamiento.id}) }}" class="btn btn-info"><i class="bi bi-box-arrow-up-left"></i> Volver al tratamiento</a>
        <button type="submit" name="confirmar" value="ok" class="btn btn-danger"><i class="bi bi-trash"></i> Confirmar eliminación</button>
    </form>

{% endblock %}
